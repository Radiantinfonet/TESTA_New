<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.radiant.rpl.testa.Registration_Done">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="100dp"

        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="You have Successfully Registered With Us.Thank you for Registering with Us."
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:gravity="bottom|center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:weightSum="1"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        >
    <TextView
        android:id="@+id/clickhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Here to proceed for Assessment"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginLeft="45dp"
        android:textColor="#000000"
        android:gravity="top|top"
        />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>