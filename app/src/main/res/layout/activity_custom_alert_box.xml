<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@android:color/transparent"
    android:id="@+id/customdialogg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:text="Please Blink your Eyes like this in order to click the Photo"
        android:layout_marginBottom="10dp"/>


    <com.radiant.rpl.testa.Common.AlertDialogEx
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        />

    <CheckBox
        android:id="@+id/check_box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not show this again!" />

</LinearLayout>